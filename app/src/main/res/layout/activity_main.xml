<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activities.LoginActivity">

    <EditText
            style="@style/LoginEditText"
            android:id="@+id/activity_main_et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nick_name"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginStart="@dimen/base_side_margin"
            android:layout_marginEnd="@dimen/base_side_margin"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/activity_main_et_pass"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            style="@style/LoginEditText"
            android:id="@+id/activity_main_et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/base_side_margin"
            android:layout_marginEnd="@dimen/base_side_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingEnd="60dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_et_nick_name"/>

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_main_iv_eye"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/activity_main_et_pass"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_et_pass"
            app:layout_constraintEnd_toEndOf="@id/activity_main_et_pass"
            app:srcCompat="@drawable/ic_eye_paswd"/>

    <Button
            android:id="@+id/activity_main_btn_submit"
            style="@style/LoginEditText"
            app:layout_constraintTop_toBottomOf="@id/activity_main_et_pass"
            android:layout_margin="@dimen/base_side_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>